generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// many-to-many relationship tables

model PodUser {
  userId Int
  podId  Int
  role   String // either 'Owner' or 'Member'
  user   User   @relation(fields: [userId], references: [id])
  pod    Pod    @relation(fields: [podId], references: [id])

  @@id([userId, podId]) // defines a composite primary key
}

model UserGame {
  userId Int
  gameId Int
  role   String  // either 'Creator' or 'Player'
  winner Boolean // true would indicate the user won the game
  user   User    @relation(fields: [userId], references: [id])
  game   Game    @relation(fields: [gameId], references: [id])

  @@id([userId, gameId])
}

model Follows {
  followedBy      User     @relation("followedBy", fields: [followedById], references: [id])
  following       User     @relation("following", fields: [followingId], references: [id])
  followedById    Int
  followingId     Int

  followedOn      DateTime @default(now())

  @@id([followedById, followingId])
}

model Notification {
  sendingNotification     User @relation("sendingNotification", fields: [sendingNotificationId], references: [id])
  recievingNotification   User @relation("recievingNotification", fields: [recievingNotificationId], references: [id])
  sendingNotificationId   Int
  recievingNotificationId Int

  sentAt        DateTime @default(now())
  followRequest Boolean?
  inviteToPod   Boolean?

  @@id([sendingNotificationId, recievingNotificationId])
}

// primary tables

model User {
  id         Int    @id @default(autoincrement())
  email      String @unique
  username   String
  passwordDigest   String

  // many-to-many self relations
  followedBy            Follows[]      @relation("followedBy")
  following             Follows[]      @relation("following")
  sendingNotification   Notification[] @relation("sendingNotification")
  recievingNotification Notification[] @relation("recievingNotification")

  // other many-to-many relations
  pods       PodUser[]
  games      UserGame[]
  
  commanders String[]
}

model Pod {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  members PodUser[]
  games   Game[]
}

model Game {
  id       Int        @id @default(autoincrement())
  loggedAt DateTime   @default(now())
  players  UserGame[]
  pod      Pod        @relation(fields: [podId], references: [id])
  podId    Int
}
