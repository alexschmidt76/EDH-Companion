generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// many-to-many relationship tables

model PodUser {
  userId Int
  podId  Int
  role   String // either 'Owner' or 'Member'
  user   User   @relation(fields: [userId], references: [id])
  pod    Pod    @relation(fields: [podId], references: [id])

  @@id([userId, podId]) // defines a composite primary key
}

model UserGame {
  userId Int
  gameId Int
  role   String  // either 'Creator' or 'Player'
  winner Boolean // true would indicate the user won the game
  user   User    @relation(fields: [userId], references: [id])
  game   Game    @relation(fields: [gameId], references: [id])

  @@id([userId, gameId])
}

model Friendship {
  user1Id         Int
  user2Id         Int
  becameFriendsDT DateTime @default(now())
  user1           User     @relation(fields: [user1Id], references: [id])
  user2           User     @relation(fields: [user2Id], references: [id])

  @@id([user1Id, user2Id])
}

// primary tables

model User {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  username   String
  commanders String[]
  friends    Friendship[]
  pods       PodUser[]
  games      UserGame[]
}

model Pod {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  members PodUser[]
  games   Game[]
}

model Game {
  id       Int        @default(autoincrement())
  loggedAt DateTime   @default(now())
  players  UserGame[]
  pod      Pod        @relation(fields: [podId], references: [id])
  podId    Int
}